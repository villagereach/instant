{
  "id": "pcmt",
  "name": "Product Catalog Management Tool",
  "description": "Installs and starts up an instance of PCMT",
  "type": "infrastructure",
  "version": "v0.0.1",
  "dependencies": ["core"],
  "environmentVariables": {
    "PCMT_REG": "pcmt",
    "PCMT_VER": "2.4.0-snapshot",
    "MYSQL_VER": "5.7",
    "ES_VER": "6.5.4",
    "PCMT_PROFILE": "dev",
    "PCMT_MYSQL_INIT_CONF": "mysql-init.sql.dist",
    "ES_JAVA_OPTS": "-Xms512m -Xmx512m",
    "DOCKER_PORT_HTTP": "80",
    "PCMT_TRAEFIK_CONF": "traefik.toml.dist",
    "PCMT_SECRET_CONF": ".parameters.yml.dist",
    "PCMT_MYSQL_ROOT_PASSWORD_CONF": "mysql-root-password.dist",
    "PCMT_MYSQL_USERNAME_CONF": "mysql-username.dist",
    "PCMT_MYSQL_PASSWORD_CONF": "mysql-password.dist"
  }
}
